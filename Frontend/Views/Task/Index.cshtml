@model IEnumerable<WebApplication6.Models.TaskViewModel>

@{
    ViewData["Title"] = "Görevler Listesi";
}

<h2>Görevler Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Görev ID</th>
            <th>Sürücü</th>
            <th>Otobüs</th>
            <th>Görev Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Driver?.Name @item.Driver?.Surname</td>
                <td>@item.Bus?.DoorNumber - @item.Bus?.PlateNumber</td>
                <td>@item.TaskDate.ToString("dd.MM.yyyy")</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="AssignTask" class="btn btn-primary">Yeni Görev Ata</a>
</div>
